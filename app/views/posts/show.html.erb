<p id="notice"><%= notice %></p>
<div class="post-container">
  <div class="row">
    <div class="col-xs-8 col-xs-offset-2">
      <div class="panel post-panel">
        <div class="col-md-12 post-title">
          <h4><%= link_to @post.title, post_path(@post), class:"post-link" %></h4>
        </div>
        <div class="post-body">
                <div class="media">
                    <img class="media-object" src="<%=  @post.image.url %>" alt="..." style="width: 100%">
                </div>
        </div>
        <div class="post-details">
          <div class="col-md-12 post-actions">
            <small> <%= pluralize(@post.weighted_score, "Point") %></small>
          </div>
          <div class="col-md-12 post-actions">
              <%= upvote_link(current_user, @post) %>
              <%= downvote_link(current_user, @post) %>
              <% if (logged_in? && @post.user == current_user) %> 
                <%= link_to "Delete", post_path(@post), method: :delete, 
                data: { confirm: "Are you sure you want to delete this post?" }, class: "btn btn-md btn-danger post-delete" %>
              <% end %>
          </div>  
        </div>
      </div>
    </div>
  </div>
</div>