<div class="alert alert-danger alert-dismissible" role="alert">
  <% if obj.errors.any? %>
      <div id="error_explanation">
        <h3>Oops!</h3>
        <strong>
          <%= pluralize(obj.errors.count, "error") %> prohibited this form from being submitted:
        </strong>
  
        <ul>
          <% obj.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
  
</div>